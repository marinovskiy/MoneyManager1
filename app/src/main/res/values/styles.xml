<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AuthEditTextTheme" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">#FFFFFF</item>
        <item name="colorControlHighlight">#FFFFFF</item>
    </style>

    <style name="EditTextAuth" parent="Widget.AppCompat.EditText">
        <item name="android:theme">@style/AuthEditTextTheme</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="AddOperationEditTextTheme" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">#000000</item>
        <item name="colorControlActivated">#000000</item>
        <item name="colorControlHighlight">#000000</item>
    </style>

    <style name="EditTextAddOperation" parent="Widget.AppCompat.EditText">
        <item name="android:theme">@style/AddOperationEditTextTheme</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

</resources>